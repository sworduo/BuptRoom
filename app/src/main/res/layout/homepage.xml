<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="thinkwee.buptroom.MainActivity"
    android:layout_centerVertical="true"
    android:visibility="visible"
    android:background="@drawable/wallpaper_4">


    <!--主页界面，这几个按钮实际上是TextVIew-->

    <Button
        android:layout_width="fill_parent"
        android:clickable="true"
        android:layout_height="85dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@color/TextBackGroundColor"
        android:textColor="@color/colorAccent"
        android:text="1\n嗨，欢迎使用BuptRoom\n这款软件能够帮您快速找到自习室"
        android:layout_marginTop="15dp"/>
    <Button
        android:layout_width="fill_parent"
        android:clickable="true"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="16sp"
        android:shadowRadius="3.0"
        android:textStyle="bold"
        android:background="@color/TextBackGroundColor"
        android:textColor="@color/colorAccent"
        android:text="2\n当您看到拉取信息提示完成时\n点开左侧菜单\n选择空闲教室查询"
        android:layout_marginTop="15dp"/>
    <Button
        android:layout_width="fill_parent"
        android:clickable="true"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="16sp"
        android:shadowRadius="3.0"
        android:textStyle="bold"
        android:background="@color/TextBackGroundColor"
        android:textColor="@color/colorAccent"
        android:text="3\n左右滑动即可切换教学楼\n请务必在校园网环境下使用本软件"
        android:layout_marginTop="15dp"/>
    <Button
        android:layout_width="fill_parent"
        android:clickable="true"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="16sp"
        android:shadowRadius="3.0"
        android:textStyle="bold"
        android:background="@color/TextBackGroundColor"
        android:textColor="@color/colorAccent"
        android:text="4\n去吧学霸~"

        android:layout_marginTop="15dp"/>



</LinearLayout>